RewriteEngine On

# Force HTTPS (existing rule - keeps all traffic secure)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Extensionless URLs: Redirect .html to clean URL and rewrite clean to .html
# First, redirect any .html requests to without .html (external redirect for clean URLs)
RewriteCond %{THE_REQUEST} \s/([^.]+)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# Then, if not a real file or directory, add .html internally (invisible to user)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# PHP handler (existing - unchanged, for contact.php etc.)
# php -- BEGIN cPanel-generated handler, do not edit
# Set the “ea-php74” package as the default “PHP” programming language.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php74 .php .php7 .phtml
</IfModule>
